{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "description": "Least maintenance possible",
      "matchUpdateTypes": [
        "bump",
        "digest",
        "lockFileMaintenance",
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
